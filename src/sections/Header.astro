---
import ThemeToggle from "../components/ThemeToggle.astro"
---
<header class="flex justify-between items-center w-full mx-auto px-4">
  <nav
    class="bg-white dark:bg-gray-800 fixed w-full z-20 top-0 start-0 border-b border-solid border-gray-200 dark:border-gray-700 transition-colors duration-200"
  >
    <div class="flex flex-wrap items-center justify-between mx-auto p-4">
      <a
        href="/"
        class="flex items-center space-x-3 rtl:space-x-reverse"
      >
        <img
          src="/logo.svg"
          alt="Uriel León Logo"
          class="w-10 h-10 rounded-full"
        />
        <span
          class="self-center text-xl text-gray-900 dark:text-white font-semibold whitespace-nowrap"
          >Uriel León</span
        >
      </a>
      <!-- <ThemeToggle /> -->
      <div class="hidden w-full md:block md:w-auto" id="navbar-default">
        <ul
          class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-200 dark:border-gray-700 rounded-base bg-gray-50 dark:bg-gray-800 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-transparent"
        >
          <li>
            <a
              href="/"
              class="block py-2 px-3 rounded text-gray-900 dark:text-white md:bg-transparent md:text-blue-600 dark:md:text-blue-400 md:p-0 hover:bg-gray-100 dark:hover:bg-gray-700 md:hover:bg-transparent"
              aria-current="page">Inicio</a
            >
          </li>
          <li>
            <a
              href="/about"
              class="block py-2 px-3 text-gray-900 dark:text-white rounded hover:bg-gray-100 dark:hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-600 dark:md:hover:text-blue-400 md:p-0"
              >Sobre mí</a
            >
          </li>
          <li>
            <a
              href="/projects"
              class="block py-2 px-3 text-gray-900 dark:text-white rounded hover:bg-gray-100 dark:hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-600 dark:md:hover:text-blue-400 md:p-0"
              >Proyectos</a
            >
          </li>
          <li>
            <a
              href="/contact"
              class="block py-2 px-3 text-gray-900 dark:text-white rounded hover:bg-gray-100 dark:hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-600 dark:md:hover:text-blue-400 md:p-0"
              >Contacto</a
            >
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
